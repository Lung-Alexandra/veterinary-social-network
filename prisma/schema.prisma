generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_LINK")
}

model User {
  id         String    @id @default(uuid())
  email      String    @unique
  bio        String?
  name       String
  password   String
  profilePic String?
  role       Role      @default(USER)
  comments   Comment[]
  posts      Post[]
}

model Post {
  id        String    @id @default(uuid())
  title     String
  content   String
  authorId  String    // <- changed to String
  createdAt DateTime  @default(now())
  type      PostType
  imagePath String?
  comments  Comment[]
  author    User      @relation(fields: [authorId], references: [id])
  tags      Tag[]     @relation("PostToTag")
}

model Tag {
  id    String  @id @default(uuid())
  name  String  @unique
  posts Post[]  @relation("PostToTag")
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  authorId  String   // <- changed to String
  postId    String   // <- changed to String
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
}

enum PostType {
  TEXT
  TEXTIMAGE
}

enum Role {
  USER
  ADMIN
}

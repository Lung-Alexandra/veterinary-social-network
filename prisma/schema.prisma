generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_LINK")
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  bio        String?
  name       String
  password   String
  profilePic String?
  role       Role      @default(USER)
  comments   Comment[]
  posts      Post[]
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  authorId  Int
  createdAt DateTime  @default(now())
  createdAt DateTime
  type      PostType
  imagePath String?
  comments  Comment[]
  author    User      @relation(fields: [authorId], references: [id])
  tags      Tag[]     @relation("PostToTag")
}

model Tag {
  id    Int    @id @default(autoincrement())
  name  String @unique
  posts Post[] @relation("PostToTag")
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  authorId  Int
  postId    Int
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
}

enum PostType {
  TEXT
  TEXTIMAGE
}

enum Role {
  USER
  ADMIN
}
